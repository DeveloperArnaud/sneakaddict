{% extends 'base.html.twig' %}
{% block stylesheets %}
{% endblock %}
{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<div class="container" style="margin-left: 600px">
    <div class="row">
    <div class="col mt-4">
    <figure class="figure">
        {% for detail in chaussure %}
        <img src="{{ asset(detail.imageName) }}" class="figure-img img-fluid rounded" alt="...">
        <figcaption style="text-align: center" class="figure-caption">Titre : {{detail.titre}}
            <br>
            Modèle : {{detail.modele}}
            <br>
            Tailles disponibles :
            {% for taille in detail.taille %}
                <button type="button"  data-toggle="modal" data-target="#exampleModalLong{{ taille.id }}" style="border-radius: 30px; text-decoration: none;background: transparent; border: 1px solid black;margin-right: 5px;margin-top: 5px;margin-bottom: 5px">{{ taille.taille }}</button>
                <div class="modal fade" id="exampleModalLong{{ taille.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Stock restant</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="card-body">
                                    <h5 class="card-title">{{ detail.titre }} | Taille : {{ taille.taille }}</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        Quantité :
                                    </h6>
                                    <p class="card-text" style="margin-top: 10px"></p>

                                    <p class="card-text"></p>



                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}

            <br>
            Prix : {{detail.prix}} €
        </figcaption>
    </figure>
    </div>
    </div>
    {% endfor %}

</div>
{% endblock %}
