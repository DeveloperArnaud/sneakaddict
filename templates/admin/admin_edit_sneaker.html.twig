{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <div class="container">
        <form action="{{ path('admin_edit_sneaker', {'id' : sneaker.id}) }}" method="POST">
            {{ form_start(form) }}

            {{ form_row(form.titre,{
                attr: { class: 'form-control'}}) }}
            {{ form_row(form.couleur,{
                attr: {  class: 'form-control'}}) }}
            {{ form_row(form.description,{
                attr: {  class: 'form-control'}}) }}
            {{ form_row(form.modele,{
                attr: {  class: 'form-control'}}) }}
            {{ form_row(form.marque,{
                attr: {  class: 'form-control'}}) }}
            {{ form_row(form.prix,{
                attr: {  class: 'form-control'}}) }}
            {{ form_row(form.path,{
                attr: { class: 'form-control'}}) }}
            {{ form_row(form.taille,{
                attr: {  class: 'form-control'}}) }}
            <br>
            {{ form_row(form.save,{
                attr: {  class: 'btn btn-success'}}) }}

            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}
