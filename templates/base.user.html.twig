<script>
    $('#searchbox').on('keyup',function () {
        var query = $(this).val();
        if(query.length > 0) {
            $.ajax({
                type: 'POST',
                url: '/search/chaussures',
                data: {
                    query: query
                },
                success: function (data) {
                    console.log(data);
                    $('#modal-users').html(data).show();
                },
            });
        } else {
            $('#modal-users').hide();
        }
    });
</script>


